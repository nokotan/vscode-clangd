{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": [
            "es6",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.symbol",
            "es2016.array.include",
            "es2017.object",
            "WebWorker",
            "ES2017.SharedMemory"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
